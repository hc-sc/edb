import Vue from 'vue';
import Select from './select.vue';
import {mountComponent} from 'test/helpers.js';

const test = {
  id: 'test',
  label: 'Test'
};

describe('Select', () => {
  it('should initialize correctly', () => {
    const comp = mountComponent(Select, test);
    expect(comp.id).toBe('test');
    expect(comp.compName).toBe('test');
    expect(comp.label).toBe('Test');
    expect(comp.options).toBeUndefined();
    expect(comp.multiple).toBe(false);
    expect(comp.value).toEqual([]);
    expect(comp.expanded).toBe(false);
    expect(comp.selected).toBeUndefined();
  });

  it('should set compName to be name if given', () => {
    const comp = mountComponent(Select, {...test, name: 'name'});
    expect(comp.id).toBe('test');
    expect(comp.compName).toBe('name');
  });

