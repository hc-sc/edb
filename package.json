{
  "name": "oecd-edossier-builder",
  "productName": "eDossier",
  "version": "1.0.0",
  "description": "eDB was commissioned by PMRA to provide desktop tooling that builds Regulatory Submissions that conform to the [Global Harmonised Submission Transport Standard](http://www.oecd.org/chemicalsafety/submission-transport-standard/) (GHSTS).",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd app && npm install && cd ..",
    "start": "electron app",
    "start:bundle": "electron build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --quiet",
    "bundle": "gulp bundle",
    "bundle:no-lint": "gulp bundle:no-lint",
    "bundle:map": "gulp bundle:map",
    "clean": "gulp clean",
    "clean:no-lint": "gulp clean:no-lint",
    "pack": "gulp pack",
    "pack:no-lint": "gulp pack:no-lint",
    "build": "gulp bundle && build --publish never",
    "build:no-lint": "gulp bundle:no-lint && build --publish never",
    "release": "gulp bundle && build"
  },
  "devDependencies": {
    "del": "^2.2.0",
    "electron-builder": "^5.14.2",
    "eslint": "^2.11.1",
    "gulp": "^3.9.1",
    "gulp-eslint": "^2.0.0",
    "gulp-jspm": "^0.5.12",
    "gulp-rename": "^1.2.2",
    "q": "^1.4.1"
  },
  "dependencies": {
    "electron-prebuilt": "1.2.3"
  },
  "build": {
    "appId": "ca.canada.eDossierBuilder",
    "app-category-type": "electron.dossier.builder.type",
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "resources/windows/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerHeaderIcon": "resources/windows/setup-icon.ico",
      "installerHeader": "resources/windows/pmralogo.bmp"
    },
    "mac": {
      "icon": "resources/osx/icon.icns"
    },
    "dmg": {
      "icon": "resources/osx/dmg-icon.icns",
      "background": "resources/osx/dmg-background.png"
    }
  },
  "directories": {
    "buildResources": "resources",
    "app": "build"
  }
}
